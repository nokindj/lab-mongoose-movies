<h2>Celebrities list</h2>

{{#each celebrities}}
<div>
    <p>{{name}}</p>
    <a href="/celebrities/{{_id}}">Details</a>
    <a href="/celebrities/new">Add new Celebrity</a>
    <form action="/celebrities/{{_id}}/delete" method="POST">
        <button type="submit">Delete Celebrity</button>
    </form>


</div>
{{/each}}